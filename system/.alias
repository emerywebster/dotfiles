# Set personal aliases, overriding those provided by oh-my-zsh libs,
# plugins, and themes. Aliases can be placed here, though oh-my-zsh
# users are encouraged to define aliases within the ZSH_CUSTOM folder.
# For a full list of active aliases, run `alias`.
#
# Aliases

alias _="sudo"
alias dl="cd ~/Downloads"
alias dk="cd ~/Desktop"
alias g="git"
alias j="jobs"
alias json="json -c"
alias rr="rm -rf"
alias s="cd ~/Sites"
alias h="history"
alias v="vim"

## git

alias gm="git commit -m "
alias grim="git rebase -i master"
alias grid="git rebase -i develop"
alias gam="git commit --amend"
alias grc="git rebase --continue"
alias gra="git rebase --abort"
alias gsoft!="git reset --soft HEAD^"
alias gbs="git bisect start"
alias gbg="git bisect good"
alias gbb="git bisect bad"
alias gbr="git bisect reset"
alias gcp="git cherry-pick"
alias gcpc="git cherry-pick --continue"
alias gcpa="git cherry-pick --abort"
alias glog="git log --graph --pretty=format:'%Cred%h%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative"
alias gpo="git pull origin"

## Environment

alias be="bundle exec"
alias es="ember serve --live-reload=false --port 4200"
alias eslr="ember serve --port 4200"
alias esp="ember s --live-reload=false --proxy=https://thefitbot-staging.herokuapp.com -p 4200"
alias ysl="yarn run start:local --live-reload=false"
alias yss="yarn run start:staging --live-reload=false"
alias yspp="yarn run start:prod --live-reload=false"
alias jekylls="bundle exec jekyll serve"

alias reload="source ~/.zshrc"

## Homebrew

alias brewup="brew update; brew upgrade; brew cleanup --prune-prefix; brew cleanup; brew doctor"

## Request using GET, POST, etc. method

for method in GET HEAD POST PUT DELETE TRACE OPTIONS; do
  alias "$method"="lwp-request -m '$method'"
done

## Recursively remove Apple meta files

alias cleanupds="find . -type f -name '*.DS_Store' -ls -exec /bin/rm {} \;"
alias cleanupad="find . -type d -name '.AppleD*' -ls -exec /bin/rm -r {} \;"

## Miscellaneous

alias quit="exit"
alias week="date +%V"
alias speedtest="wget -O /dev/null http://speedtest.wdc01.softlayer.com/downloads/test10.zip"

## Edit the hosts file

alias hosts='code /etc/hosts'

## Flush DNS

alias flushdns='dscacheutil -flushcache'

